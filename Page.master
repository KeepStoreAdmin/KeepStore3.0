/* Multi-level dropdown (Settore -> Categoria -> Tipologia) */
.dropdown-menu li { position: relative; }
.dropdown-menu .dropdown-menu {
    top: 0;
    left: 100%;
    margin-top: -0.25rem;
}

/* Desktop: mostra i submenu al passaggio */
@media (min-width: 992px) {
    .dropdown-menu > li:hover > .dropdown-menu {
        display: block;
    }
}
