    <script type="text/javascript">
(function () {
    function enableHoverDropdowns() {
        if (typeof bootstrap === "undefined" || !bootstrap.Dropdown) return;

        var isDesktop = window.matchMedia("(min-width: 992px)").matches;
        if (!isDesktop) return;

        document.querySelectorAll(".navbar .dropdown").forEach(function (dd) {
            var toggle = dd.querySelector(":scope > a[data-bs-toggle='dropdown']");
            if (!toggle) return;

            dd.addEventListener("mouseenter", function () {
                bootstrap.Dropdown.getOrCreateInstance(toggle).show();
            });
            dd.addEventListener("mouseleave", function () {
                bootstrap.Dropdown.getOrCreateInstance(toggle).hide();
            });
        });
    }

    document.addEventListener("DOMContentLoaded", enableHoverDropdowns);
})();
</script>
